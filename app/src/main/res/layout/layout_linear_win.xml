<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible">

                <Button
                    android:id="@+id/btn_left"
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:background="@drawable/arrow_back" />

            </RelativeLayout>

            <!--8개 나누기-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_shape1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@xml/ball" />

                <TextView
                    android:id="@+id/tv_no1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/img_shape1"
                    android:layout_alignTop="@+id/img_shape1"
                    android:layout_alignRight="@+id/img_shape1"
                    android:layout_alignBottom="@+id/img_shape1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_shape2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@xml/ball" />

                <TextView
                    android:id="@+id/tv_no2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/img_shape2"
                    android:layout_alignTop="@+id/img_shape2"
                    android:layout_alignRight="@+id/img_shape2"
                    android:layout_alignBottom="@+id/img_shape2"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_shape3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@xml/ball" />

                <TextView
                    android:id="@+id/tv_no3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/img_shape3"
                    android:layout_alignTop="@+id/img_shape3"
                    android:layout_alignRight="@+id/img_shape3"
                    android:layout_alignBottom="@+id/img_shape3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_shape4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@xml/ball" />

                <TextView
                    android:id="@+id/tv_no4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/img_shape4"
                    android:layout_alignTop="@+id/img_shape4"
                    android:layout_alignRight="@+id/img_shape4"
                    android:layout_alignBottom="@+id/img_shape4"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_shape5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@xml/ball" />

                <TextView
                    android:id="@+id/tv_no5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/img_shape5"
                    android:layout_alignTop="@+id/img_shape5"
                    android:layout_alignRight="@+id/img_shape5"
                    android:layout_alignBottom="@+id/img_shape5"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_shape6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@xml/ball" />

                <TextView
                    android:id="@+id/tv_no6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/img_shape6"
                    android:layout_alignTop="@+id/img_shape6"
                    android:layout_alignRight="@+id/img_shape6"
                    android:layout_alignBottom="@+id/img_shape6"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bouns_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_shape7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@xml/ball"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_no7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/img_shape7"
                    android:layout_alignTop="@+id/img_shape7"
                    android:layout_alignRight="@+id/img_shape7"
                    android:layout_alignBottom="@+id/img_shape7"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bouns_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_shape8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@xml/ball" />

                <TextView
                    android:id="@+id/tv_no8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/img_shape8"
                    android:layout_alignTop="@+id/img_shape8"
                    android:layout_alignRight="@+id/img_shape8"
                    android:layout_alignBottom="@+id/img_shape8"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible">

                <Button
                    android:id="@+id/btn_right"
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:background="@drawable/arrow_forward" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</layout>